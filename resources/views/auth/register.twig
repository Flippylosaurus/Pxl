<!DOCTYPE html>
<html class="login-page">
<head>
    {% include 'partials/head.twig' %}
    <title>{% block title %}Register{% endblock %} â€“ {{ config_get('app.name') }}</title>
</head>
<body>
{% block body %}
    <div class="container page-content fullheight">
        {% block content %}
            <div class="row fullheight">
                <div class="fullheight col s12 m6 offset-m3 valign-wrapper">
                    <div class="card login-card valign">
                        <form method="POST" action="{{ route('auth/do_register') }}">
                            <div class="card-content">
                                <div class="center-align">
                                    <img class="login-logo" src="{{ asset('img/logo/Px-logo-cut-small.png') }}" alt="{{ config_get('app.name') }}">
                                </div>
                                <div class="login-form">
                                    <div class="card-title center-align">{{ trans('auth.register.register') }}</div>
                                    {% if errors.any %}
                                        <div class="card red white-text center-align">
                                            <div class="card-content center-align">
                                                <span class="material-icons left">warning</span>

                                                <p class="center-align">{{ trans('auth.register.errors_occurred', errors.count()) }}</p>
                                            </div>
                                        </div>
                                    {% endif %}
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            <input required autofocus name="username" value="{{ old('username') }}" id="username" type="text" class="validate {{ errors.has('username') ? 'invalid' : '' }}">
                                            <label for="username" id="username_label" data-error="{{ errors.first('username') }}">{{ trans('auth.register.username') }}</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">email</i>
                                            <input required autofocus name="email" value="{{ old('email') }}" id="email" type="email" class="validate {{ errors.has('email') ? 'invalid' : '' }}">
                                            <label for="email" id="email_label" data-error="{{ errors.first('email') }}">{{ trans('auth.register.email') }}</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">email</i>
                                            <input required autofocus name="confirm_email" value="{{ old('confirm_email') }}" id="confirm_email" type="email" class="validate {{ errors.has('confirm_email') ? 'invalid' : '' }}">
                                            <label for="confirm_email" id="confirm_email_label" data-error="{{ errors.first('email') }}">{{ trans('auth.register.confirm_email') }}</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            <input required id="password" name="password" type="password" class="validate">
                                            <label for="password" id="password_label">{{ trans('auth.register.password') }}</label>

                                            <p class="help">{{ trans('auth.register.password_help') }}</p>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            <input required id="confirm_password" name="confirm_password" type="password" class="validate">
                                            <label for="confirm_password" id="confirm_password_label">{{ trans('auth.register.confirm_password') }}</label>
                                        </div>
                                        {{ csrf_field() }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn green">{{ trans('auth.register.register') }}</button>
                                <a href="{{ route('auth/login') }}" class="btn">{{ trans('auth.log_in') }}</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% block scripts %}
    <script src="{{ asset('js/app.js?v=1.0') }}"></script>
    <script src="{{ asset('js/pxl.js?v=13') }}"></script>
{% endblock %}
{% endblock %}
</body>
</html>