<!DOCTYPE html>
<html class="login-page">
<head>
    {% include 'partials/head.twig' %}
    <title>{% block title %}Register{% endblock %} â€“ {{ config_get('app.name') }}</title>
</head>
<body>
{% block body %}
    <div class="container page-content fullheight">
        {% block content %}
            <div class="row fullheight">
                <div class="fullheight col s12 m6 offset-m3 valign-wrapper">
                    <div class="card login-card valign">
                        <form method="POST" action="{{ route('auth/do_register') }}">
                            <div class="card-content">
                                <div class="center-align">
                                    <img class="login-logo" src="{{ asset('img/logo/Px-logo-cut-small.png') }}" alt="{{ config_get('app.name') }}">
                                </div>
                                <div class="login-form">
                                    <div class="card-title center-align">{{ trans('auth.register') }}</div>
                                    {% if errors.any %}
                                        <div class="card red white-text center-align">
                                            <div class="card-content center-align">
                                                <span class="material-icons left">warning</span>
                                                {% for error in errors.all %}
                                                    <p class="center-align">{{ error }}</p>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            <input required autofocus name="username" value="{{ old('username') }}" id="username" type="text" class="validate">
                                            <label for="username" id="username_label">{{ trans('auth.register.username') }}</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">envelope</i>
                                            <input required autofocus name="username" value="{{ old('username') }}" id="email" type="email" class="validate">
                                            <label for="email" id="email_label">{{ trans('auth.register.email') }}</label>
                                        </div>
                                        <div class="input-field col s12">
                                            <i class="material-icons prefix">lock</i>
                                            <input required id="password" name="password" type="password" class="validate">
                                            <label for="password" id="password_label">{{ trans('auth.password') }}</label>
                                        </div>
                                        {{ csrf_field() }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn green">{{ trans('auth.register') }}</button>
                                <a href="{{ route('auth/login') }}" class="btn">{{ trans('auth.log_in') }}</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% block scripts %}
    <script src="{{ asset('js/app.js?v=1.0') }}"></script>
    <script src="{{ asset('js/pxl.js?v=13') }}"></script>
{% endblock %}
{% endblock %}
</body>
</html>