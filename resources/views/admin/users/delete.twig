{% extends 'partials/page.twig' %}
{% block title %}{{ trans('admin.users.edit.delete') }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col s12">
            <h2>{{ trans('admin.users.edit.delete') }}</h2>
            <div class="card red white-text center-align">
                <div class="card-content center-align">
                    <span class="material-icons left">warning</span>
                    <p class="center-align">{{ trans('admin.users.edit.deletion_warning', { user: user.username }) }}</p>
                </div>
            </div>
            <form method="POST" action="{{ route('admin/do_delete_user', { user: user }) }}">
                {{ csrf_field() }}
                {{ method_field('DELETE') }}
                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn red waves-effect waves-light delete-btn" type="submit" name="action">{{ trans('admin.users.edit.delete') }}
                            <i class="material-icons right">delete_forever</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}