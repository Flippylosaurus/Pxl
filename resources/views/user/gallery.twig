{% extends 'partials/page.twig' %}
{% block title %}{{ trans('gallery.title') }}{% endblock %}
{% block content %}
    <div class="section">
        <div class="row">
            <div class="col s12">
                <h3>{{ trans('gallery.title') }}</h3>
            </div>
            <div class="col s12 images">
                {{ dump(images) }}
                {% for image in images %}
                    <div class="col s6 m3">
                        <div class="card hoverable">
                            <div class="card-image waves-effect waves-block waves-light">
                                <img class="activator gallery-img" title="{{ image.name }}" src="{{ route('user/image_thumbnail', { image_url: image.url_name }) }}">
                            </div>
                            <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4 truncate tooltipped image-title" data-position="top" data-delay="50" data-tooltip="{{ image.name }}">{{ image.name }}
                                    <i class="material-icons right">close</i>
                                </span>
                                <a class="waves-effect waves-light btn btn-floating tooltipped" data-position="top" data-delay="50" data-tooltip="{{ trans('gallery.image.link') }}">
                                    <i class="material-icons">link</i>
                                </a>
                                <a class="waves-effect waves-light red btn btn-floating tooltipped" data-position="top" data-delay="50" data-tooltip="{{ trans('gallery.image.delete') }}">
                                    <i class="material-icons">delete</i>
                                </a>
                                <p class="tooltipped" data-position="top" data-delay="50" data-tooltip="{{ trans('gallery.image.scheduled_deletion_time') }}">
                                    <i class="material-icons">timer</i>
                                    {{ image.deletion_timestamp is null ? trans('datetime.never') : image.deletion_timestamp|date(trans('datetime.format.date_and_time')) }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}